<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="@android:color/holo_blue_bright"
                android:startColor="@android:color/holo_green_light" />
            <corners android:radius="@dimen/various_items_border_radius" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/match_screen_card_adapter_activity_border_width"
        android:left="@dimen/match_screen_card_adapter_activity_border_width"
        android:right="@dimen/match_screen_card_adapter_activity_border_width"
        android:top="@dimen/match_screen_card_adapter_activity_border_width">
        <shape android:shape="rectangle">
            <solid android:color="@color/card_background_color" />
            <corners android:radius="@dimen/various_items_border_radius" />
        </shape>
    </item>

</layer-list>