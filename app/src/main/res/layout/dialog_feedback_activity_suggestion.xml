<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/dialogFeedbackActivitySuggestionNameEditText"
        android:background="@drawable/background_various_box_borders"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/profile_screen_feedback_activity_suggestion_name_hint"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/dialogFeedbackActivitySuggestionOtherEditText"
        android:background="@drawable/background_various_box_borders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:minLines="5"
        android:ems="10"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:hint="@string/profile_screen_feedback_activity_suggestion_body_hint"
        android:importantForAutofill="no" />

</LinearLayout>