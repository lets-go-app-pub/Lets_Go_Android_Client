<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="10dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phoneNumberTextInputLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:prefixText="+1 "
        app:boxBackgroundColor="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:autofillHints="phone">

        <!--NOTE: The hint must be set programmatically, otherwise the view will not expand to show it.-->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/accountRecoveryPhoneNumberEditText"
            android:contentDescription="@string/phone_number_text_input_layout_content_description"
            style="@style/input_phone_number_text_input_edit_text" />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>