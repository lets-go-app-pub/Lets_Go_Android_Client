<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".applicationActivityFragments.chatRoomsListFragment.ChatRoomsListFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragmentChatRoomsListTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="start"
        android:padding="7dp"
        android:text="@string/chat_room_list_fragment_chat_title"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fragmentMessengerSearchEditText"
        app:layout_constraintEnd_toStartOf="@+id/fragmentMessengerScreenChatRoomSelectPopupMenuImageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/fragmentMessengerScreenChatRoomSelectPopupMenuImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fragmentMessengerScreenChatRoomSelectRecyclerView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:src="@android:drawable/ic_menu_sort_by_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fragmentChatRoomsListTitleTextView"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/chat_room_list_fragment_popup_menu_image_view_content_description" />

    <EditText
        android:id="@+id/fragmentMessengerSearchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/chat_room_list_fragment_search_bar_title"
        app:layout_constrainedWidth="true"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLines="1"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/fragmentMessengerScreenChatRoomSelectRecyclerView"
        app:layout_constraintEnd_toStartOf="@+id/fragmentMessengerCloseSearchImageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentChatRoomsListTitleTextView" />

    <ImageView
        android:id="@+id/fragmentMessengerCloseSearchImageView"
        android:layout_width="42dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:src="@drawable/icon_round_close_grey_24"
        android:visibility="gone"
        android:contentDescription="@string/chat_room_list_fragment_close_search_bar_image_view_content_description"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@+id/fragmentMessengerScreenChatRoomSelectRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fragmentMessengerSearchEditText"
        app:layout_constraintTop_toBottomOf="@+id/fragmentMessengerScreenChatRoomSelectPopupMenuImageView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragmentMessengerScreenChatRoomSelectRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragmentChatRoomsListTitleTextView"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentMessengerSearchEditText"
        tools:listitem="@layout/list_item_chat_room_display" />

</androidx.constraintlayout.widget.ConstraintLayout>