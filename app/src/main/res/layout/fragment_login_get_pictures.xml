<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutLoginGetPictures"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reUsedFragments.selectPicturesFragment.SelectPicturesFragment">

    <TextView
        android:id="@+id/loginGetPicturesErrorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectPicturesLoginFragment" />

    <TextView
        android:id="@+id/loginPictureTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get_pictures_title"
        android:textSize="@dimen/login_edit_text_values_generic_size"
        app:layout_constraintBottom_toTopOf="@+id/selectPicturesLoginFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/loginGetPicturesProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/progress_bar_width"
        android:layout_height="@dimen/progress_bar_height"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/getPictureContinueButton"
        android:text="@string/Continue"
        style="@style/initial_login_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectPicturesLoginFragment" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/selectPicturesLoginFragment"
        android:name="site.letsgoapp.letsgo.reUsedFragments.selectPicturesFragment.SelectPicturesFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toTopOf="@+id/getPictureContinueButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_select_pictures" />


</androidx.constraintlayout.widget.ConstraintLayout>
