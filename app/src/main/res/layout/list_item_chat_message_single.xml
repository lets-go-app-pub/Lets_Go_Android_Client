<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chatMessageListSingleItemPrimaryConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/chatMessageListSingleItemDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/chat_room_fragment_single_message_or_date"
        android:text="@string/chat_message_primary_list_item_date_placeholder"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toTopOf="@+id/chatMessageListSingleItemTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chatMessageListSingleItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/chat_room_fragment_single_message_or_date"
        android:text="@string/chat_message_single_list_item_message_placeholder"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatMessageListSingleItemDateTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>